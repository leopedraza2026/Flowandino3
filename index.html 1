    <script>
        /* --- 1. BASE DE DATOS (IndexedDB) --- */
        // Esta capa maneja el almacenamiento grande de forma as√≠ncrona
        const DB = {
            dbName: 'FlowAndinoDB',
            version: 1,
            db: null,

            init: async () => {
                return new Promise((resolve, reject) => {
                    const request = indexedDB.open(DB.dbName, DB.version);

                    request.onupgradeneeded = (event) => {
                        const db = event.target.result;
                        // Crear almacenes si no existen
                        if (!db.objectStoreNames.contains('users')) db.createObjectStore('users', { keyPath: 'id', autoIncrement: true });
                        if (!db.objectStoreNames.contains('products')) db.createObjectStore('products', { keyPath: 'id', autoIncrement: true });
                    };

                    request.onsuccess = (event) => {
                        DB.db = event.target.result;
                        console.log("Base de datos conectada.");
                        resolve(DB.db);
                    };

                    request.onerror = (event) => reject("Error DB: " + event.target.errorCode);
                });
            },

            // Helpers gen√©ricos
            getAll: async (storeName) => {
                return new Promise((resolve) => {
                    const tx = DB.db.transaction(storeName, 'readonly');
                    const store = tx.objectStore(storeName);
                    const request = store.getAll();
                    request.onsuccess = () => resolve(request.result);
                });
            },

            put: async (storeName, data) => {
                return new Promise((resolve) => {
                    const tx = DB.db.transaction(storeName, 'readwrite');
                    const store = tx.objectStore(storeName);
                    store.put(data);
                    tx.oncomplete = () => resolve();
                });
            },

            delete: async (storeName, id) => {
                return new Promise((resolve) => {
                    const tx = DB.db.transaction(storeName, 'readwrite');
                    const store = tx.objectStore(storeName);
                    store.delete(id);
                    tx.oncomplete = () => resolve();
                });
            }
        };

        /* --- 2. L√ìGICA DE LA APP --- */
        const app = {
            state: {
                currentUser: null,
                users: [],
                products: []
            },

            init: async () => {
                try {
                    await DB.init(); // Conectar a la BD
                    await app.loadData(); // Cargar datos
                    
                    // Si est√° vac√≠o, sembrar datos iniciales
                    if (app.state.users.length === 0) {
                        await app.seedData();
                    }
                    
                    // Verificar sesi√≥n (simple check en memoria, no persistente por seguridad en este demo)
                    app.state.currentUser = null;
                    app.ui.updateNav();
                } catch (e) {
                    console.error(e);
                    app.ui.toast("Error cargando base de datos", 'error');
                }
            },

            loadData: async () => {
                app.state.users = await DB.getAll('users');
                app.state.products = await DB.getAll('products');
            },

            seedData: async () => {
                // Datos iniciales
                const admin = { user: 'admin', pass: '1234', role: 'admin', phone: '', address: '' };
                const seller = { user: 'vendedor', pass: '1234', role: 'seller', phone: '70000000', address: 'Zona Central' };
                
                await DB.put('users', admin);
                await DB.put('users', seller);

                const p1 = { name: 'Chompa Andina', price: 250, department: 'La Paz', category: 'Chompas', img: 'https://picsum.photos/seed/ch/400/400', sellerId: 1 }; // sellerId provisional
                const p2 = { name: 'Blusa Floral', price: 120, department: 'Santa Cruz', category: 'Blusas', img: 'https://picsum.photos/seed/bl/400/400', sellerId: 2 };
                
                // Nota: IDs se generan automaticamente al poner, pero necesitamos recuperar el ID real para asociar
                await DB.put('products', p1);
                await DB.put('products', p2);
                
                // Recargar para tener los IDs correctos
                await app.loadData();
            },

            /* --- AUTENTICACI√ìN Y PERFIL --- */
            auth: {
                login: async () => {
                    const u = document.getElementById('login-user').value;
                    const p = document.getElementById('login-pass').value;
                    const found = app.state.users.find(user => user.user === u && user.pass === p);

                    if (found) {
                        app.state.currentUser = found;
                        app.ui.toast(`Bienvenido ${found.user}`, 'success');
                        app.ui.updateNav();
                        app.navigate('dashboard');
                        // Cargar datos del perfil en el formulario
                        document.getElementById('profile-phone').value = found.phone || '';
                        document.getElementById('profile-address').value = found.address || '';
                    } else {
                        app.ui.toast('Datos incorrectos', 'error');
                    }
                },
                logout: () => {
                    app.state.currentUser = null;
                    app.ui.updateNav();
                    app.navigate('landing');
                },
                updateProfile: async () => {
                    const phone = document.getElementById('profile-phone').value;
                    const address = document.getElementById('profile-address').value;
                    const user = app.state.currentUser;

                    if (!user) return;

                    user.phone = phone;
                    user.address = address;
                    
                    // Actualizar en BD
                    await DB.put('users', user);
                    
                    // Actualizar lista local
                    const idx = app.state.users.findIndex(u => u.id === user.id);
                    if(idx !== -1) app.state.users[idx] = user;

                    app.ui.toast('Perfil actualizado', 'success');
                },
                updatePassword: async () => {
                    const current = document.getElementById('pass-current').value;
                    const newPass = document.getElementById('pass-new').value;
                    const user = app.state.currentUser;

                    if (user.pass !== current) {
                        app.ui.toast('Contrase√±a actual incorrecta', 'error');
                        return;
                    }
                    if (newPass.length < 4) return;

                    user.pass = newPass;
                    await DB.put('users', user);
                    
                    // Actualizar lista local
                    const idx = app.state.users.findIndex(u => u.id === user.id);
                    if(idx !== -1) app.state.users[idx] = user;

                    app.ui.toast('Contrase√±a cambiada', 'success');
                    document.getElementById('pass-current').value = '';
                    document.getElementById('pass-new').value = '';
                }
            },

            /* --- PRODUCTOS --- */
            products: {
                renderShop: async () => {
                    const container = document.getElementById('shop-container');
                    container.innerHTML = '';
                    
                    const deptFilter = document.getElementById('filter-dept').value;
                    const catFilter = document.getElementById('filter-cat').value;

                    let filtered = app.state.products;
                    if (deptFilter !== 'Todos') filtered = filtered.filter(p => p.department === deptFilter);
                    if (catFilter !== 'Todos') filtered = filtered.filter(p => p.category === catFilter);

                    if (filtered.length === 0) {
                        container.innerHTML = '<p style="grid-column:1/-1; text-align:center;">No hay productos.</p>';
                        return;
                    }

                    filtered.forEach(p => {
                        // Buscar vendedor para mostrar datos de contacto
                        const seller = app.state.users.find(u => u.id === p.sellerId) || { phone: 'No disponible', address: '', user: 'Desconocido' };
                        
                        // Crear tarjeta
                        const card = document.createElement('div');
                        card.className = 'product-card';
                        
                        // ID √∫nico para la caja de contacto
                        const contactId = `contact-${p.id}`;

                        card.innerHTML = `
                            <img src="${p.img}" class="product-img">
                            <div class="product-info">
                                <div class="product-badges">
                                    <span class="badge dept">${p.department}</span>
                                    <span class="badge cat">${p.category}</span>
                                </div>
                                <div class="product-title">${p.name}</div>
                                <div class="product-price">Bs. ${parseFloat(p.price).toLocaleString('es-BO')}</div>
                                
                                <button class="btn-contact-seller" onclick="app.ui.toggleContact('${contactId}')">
                                    üìû Contactar Vendedor
                                </button>
                                
                                <div id="${contactId}" class="contact-info-box">
                                    <strong>Vendedor:</strong> ${seller.user}<br>
                                    <strong>Tel√©fono:</strong> <a href="tel:${seller.phone}" style="color:var(--primary)">${seller.phone}</a><br>
                                    <strong>Ubicaci√≥n:</strong> ${seller.address}
                                </div>
                            </div>
                        `;
                        container.appendChild(card);
                    });
                },
                handleImageUpload: (input) => {
                    if (input.files && input.files[0]) {
                        const reader = new FileReader();
                        reader.onload = (e) => {
                            document.getElementById('img-preview').src = e.target.result;
                            document.getElementById('img-preview').style.display = 'block';
                            document.getElementById('prod-img-data').value = e.target.result;
                        };
                        reader.readAsDataURL(input.files[0]);
                    }
                },
                openModal: (isEdit = false) => {
                    document.getElementById('product-modal').classList.add('active');
                    if(!isEdit) {
                        document.getElementById('prod-id').value = '';
                        document.getElementById('prod-name').value = '';
                        document.getElementById('prod-dept').value = 'La Paz';
                        document.getElementById('prod-cat').value = 'Ropa General';
                        document.getElementById('prod-price').value = '';
                        document.getElementById('prod-img-file').value = '';
                        document.getElementById('img-preview').style.display = 'none';
                        document.getElementById('prod-img-data').value = '';
                    }
                },
                save: async () => {
                    const id = document.getElementById('prod-id').value;
                    const name = document.getElementById('prod-name').value;
                    const dept = document.getElementById('prod-dept').value;
                    const cat = document.getElementById('prod-cat').value;
                    const price = document.getElementById('prod-price').value;
                    let img = document.getElementById('prod-img-data').value;

                    if(!name || !price) return app.ui.toast('Faltan datos', 'error');
                    if(!img) img = "https://picsum.photos/seed/noprod/400/400";

                    if(id) {
                        // Editar
                        const idx = app.state.products.findIndex(p => p.id == id);
                        if(idx !== -1) {
                            app.state.products[idx] = { ...app.state.products[idx], name, price, img, department: dept, category: cat };
                            await DB.put('products', app.state.products[idx]);
                        }
                    } else {
                        // Nuevo
                        const newProd = { name, price, img, department: dept, category: cat, sellerId: app.state.currentUser.id };
                        await DB.put('products', newProd);
                        // Recargar lista para obtener el ID real generado por BD
                        await app.loadData(); 
                    }
                    app.ui.toast('Guardado', 'success');
                    app.products.closeModal();
                    app.dashboard.renderProducts();
                },
                delete: async (id) => {
                    if(confirm('¬øBorrar?')) {
                        await DB.delete('products', parseInt(id));
                        app.state.products = app.state.products.filter(p => p.id !== id);
                        app.dashboard.renderProducts();
                    }
                },
                closeModal: () => {
                    document.getElementById('product-modal').classList.remove('active');
                }
            },

            /* --- ADMIN --- */
            admin: {
                createSeller: async () => {
                    const u = document.getElementById('new-seller-user').value;
                    const p = document.getElementById('new-seller-pass').value;
                    if(!u || !p) return;
                    if(app.state.users.find(x => x.user === u)) return app.ui.toast('Usuario existe', 'error');

                    await DB.put('users', { user: u, pass: p, role: 'seller', phone: '', address: '' });
                    await app.loadData();
                    app.dashboard.renderAdmin();
                    app.ui.toast('Vendedor creado', 'success');
                },
                deleteSeller: async (id) => {
                    if(confirm('¬øEliminar vendedor?')) {
                        await DB.delete('users', parseInt(id));
                        app.state.users = app.state.users.filter(u => u.id !== id);
                        app.dashboard.renderAdmin();
                    }
                }
            },

            /* --- DASHBOARD RENDER --- */
            dashboard: {
                render: () => {
                    const user = app.state.currentUser;
                    document.getElementById('profile-panel').style.display = 'none';
                    document.getElementById('admin-panel').style.display = 'none';

                    if(user.role === 'admin') {
                        document.getElementById('admin-panel').style.display = 'block';
                        app.dashboard.renderAdmin();
                        // El admin no tiene lista de productos en este demo, o podr√≠a ver todos
                        document.querySelector('.content').style.display = 'none'; 
                    } else {
                        document.getElementById('profile-panel').style.display = 'block';
                        document.querySelector('.content').style.display = 'block';
                        app.dashboard.renderProducts();
                    }
                },
                renderProducts: () => {
                    const tbody = document.getElementById('my-products-body');
                    tbody.innerHTML = '';
                    const myProducts = app.state.products.filter(p => p.sellerId === app.state.currentUser.id);
                    
                    myProducts.forEach(p => {
                        const tr = document.createElement('tr');
                        tr.innerHTML = `
                            <td><img src="${p.img}" style="width:40px;height:40px;object-fit:cover;"></td>
                            <td>${p.name}<br><small>${p.department}</small></td>
                            <td>Bs ${p.price}</td>
                            <td>
                                <button class="btn-delete" onclick="app.products.delete(${p.id})">Borrar</button>
                            </td>
                        `;
                        tbody.appendChild(tr);
                    });
                },
                renderAdmin: () => {
                    const ul = document.getElementById('sellers-list-ul');
                    ul.innerHTML = '';
                    const sellers = app.state.users.filter(u => u.role === 'seller');
                    sellers.forEach(s => {
                        const li = document.createElement('li');
                        li.style.display = 'flex';
                        li.style.justifyContent = 'space-between';
                        li.style.marginBottom = '5px';
                        li.innerHTML = `<span>${s.user} (${s.phone || 'Sin tel'})</span> <button class="btn-delete" onclick="app.admin.deleteSeller(${s.id})">X</button>`;
                        ul.appendChild(li);
                    });
                }
            },

            /* --- UI Y NAVEGACI√ìN --- */
            navigate: (view) => {
                document.querySelectorAll('.view-section').forEach(el => el.classList.remove('active'));
                
                if (view === 'shop') {
                    document.getElementById('shop-view').classList.add('active');
                    app.products.renderShop();
                } else if (view === 'dashboard') {
                    if(!app.state.currentUser) return app.navigate('login');
                    document.getElementById('dashboard-view').classList.add('active');
                    app.dashboard.render();
                } else if (view === 'login') {
                    if(app.state.currentUser) return app.navigate('dashboard');
                    document.getElementById('login-view').classList.add('active');
                } else {
                    document.getElementById('landing-view').classList.add('active');
                }
                window.scrollTo(0,0);
            },

            ui: {
                updateNav: () => {
                    const user = app.state.currentUser;
                    document.getElementById('nav-login').style.display = user ? 'none' : 'block';
                    document.getElementById('nav-logout').style.display = user ? 'block' : 'none';
                    document.getElementById('nav-dashboard').style.display = user ? 'block' : 'none';
                },
                toast: (msg, type='success') => {
                    const t = document.getElementById('toast');
                    t.textContent = msg;
                    t.className = `toast show ${type}`;
                    setTimeout(() => t.classList.remove('show'), 3000);
                },
                toggleContact: (id) => {
                    const el = document.getElementById(id);
                    if(el.classList.contains('show')) el.classList.remove('show');
                    else el.classList.add('show');
                }
            }
        };

        // INICIAR
        document.addEventListener('DOMContentLoaded', app.init);

    </script>
</body>
</html>
